<process name="BPELPoSpendReport"
               targetNamespace="http://xmlns.oracle.com/XXDMA/XXDmaPoSpendReport/BPELPoSpendReport"
               xmlns="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
               xmlns:client="http://xmlns.oracle.com/XXDMA/XXDmaPoSpendReport/BPELPoSpendReport"
               xmlns:ora="http://schemas.oracle.com/xpath/extension"
               xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
         xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:ns1="http://xmlns.oracle.com/pcbpel/adapter/db/XXDMA/XXDmaPoSpendReport/InvokePoSpendPrc"
         xmlns:bpel2="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:xp20="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.Xpath20"
         xmlns:oraext="http://www.oracle.com/XSL/Transform/java/oracle.tip.pc.services.functions.ExtFunc"
         xmlns:dvm="http://www.oracle.com/XSL/Transform/java/oracle.tip.dvm.LookupValue"
         xmlns:hwf="http://xmlns.oracle.com/bpel/workflow/xpath"
         xmlns:ids="http://xmlns.oracle.com/bpel/services/IdentityService/xpath"
         xmlns:bpm="http://xmlns.oracle.com/bpmn20/extensions"
         xmlns:xdk="http://schemas.oracle.com/bpel/extension/xpath/function/xdk"
         xmlns:xref="http://www.oracle.com/XSL/Transform/java/oracle.tip.xref.xpath.XRefXPathFunctions"
         xmlns:ldap="http://schemas.oracle.com/xpath/extension/ldap"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        PARTNERLINKS                                                      
        List of services participating in this BPEL process               
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    --> 
  <partnerLinks>
    <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
    <partnerLink name="bpelpospendreport_client" partnerLinkType="client:BPELPoSpendReport" myRole="BPELPoSpendReportProvider"/>
    <partnerLink name="InvokePoSpendPrc"
                 partnerLinkType="ns1:InvokePoSpendPrc_plt"
                 partnerRole="InvokePoSpendPrc_role"/>
  </partnerLinks>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
      List of messages and XML documents used within this BPEL process 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <variables>
    <!-- Reference to the message passed as input during initiation -->
    <variable name="inputVariable" messageType="client:BPELPoSpendReportRequestMessage"/>

    <!-- Reference to the message that will be returned to the requester-->
    <variable name="outputVariable" messageType="client:BPELPoSpendReportResponseMessage"/>
    <variable name="InvokePoSpendPrc_InputVariable"
              messageType="ns1:args_in_msg"/>
    <variable name="InvokePoSpendPrc_OutputVariable"
              messageType="ns1:args_out_msg"/>
  </variables>
  <faultHandlers>
    <catchAll>
      <assign name="AssignErrorReponse">
        <copy>
          <from expression="'Error while processing the data in SOA'"/>
          <to variable="outputVariable" part="payload"
              query="/client:processResponse/client:ReturnMessage"/>
        </copy>
      </assign>
    </catchAll>
  </faultHandlers>
  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <sequence name="main">

    <!-- Receive input from requestor. (Note: This maps to operation defined in BPELPoSpendReport.wsdl) -->
    <receive name="receiveInput" partnerLink="bpelpospendreport_client" portType="client:BPELPoSpendReport" operation="process" variable="inputVariable" createInstance="yes"/>
    <assign name="TransformMafToDbPrc">
      <bpelx:annotation>
        <bpelx:pattern>transformation</bpelx:pattern>
      </bpelx:annotation>
      <copy>
        <from expression="ora:doXSLTransformForDoc('xsl/Transformation_MAFtoDB.xsl', $inputVariable.payload)"/>
        <to variable="InvokePoSpendPrc_InputVariable" part="InputParameters"/>
      </copy>
    </assign>
    <invoke name="InvokePoSpendDB"
            inputVariable="InvokePoSpendPrc_InputVariable"
            outputVariable="InvokePoSpendPrc_OutputVariable"
            partnerLink="InvokePoSpendPrc" portType="ns1:InvokePoSpendPrc_ptt"
            operation="InvokePoSpendPrc" bpelx:invokeAsDetail="no"/>
    <assign name="TransformDbToMaf">
      <bpelx:annotation>
        <bpelx:pattern>transformation</bpelx:pattern>
      </bpelx:annotation>
      <copy>
        <from expression="ora:doXSLTransformForDoc('xsl/Transformation_DBToMAF.xsl', $InvokePoSpendPrc_OutputVariable.OutputParameters)"/>
        <to variable="outputVariable" part="payload"/>
      </copy>
    </assign>
    <!-- Generate reply to synchronous request -->
    <reply name="replyOutput" partnerLink="bpelpospendreport_client" portType="client:BPELPoSpendReport" operation="process" variable="outputVariable"/>
  </sequence>
</process>